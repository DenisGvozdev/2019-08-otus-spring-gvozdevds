<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fileReaderCSVer" class="ru.otus.spring.service.FileReaderCSVImpl">
        <constructor-arg index="0" value="src/main/resources/questions.csv"/>
    </bean>

    <bean id="testService" class="ru.otus.spring.service.TestServiceImpl">
        <constructor-arg name="fileReaderCSVer" ref="fileReaderCSVer" />
    </bean>

</beans>